```js
function setAlert(
  container,
  { 
    type = 'primary',
    _class = '',
    message = 'Empty message',
    clear = true,
    dismiss = false,
    auto_close = !dismiss,
    timer = 5000,
    icon = false,
  } = {}
) {
  container = typeof container === 'string' ? $(container) : container;
  if (!container) return;

  if (clear) container.html('');

  if (icon) {
    const icon_class = {
      primary: 'envelope',
      secondary: 'circle',
      success: 'circle-check',
      danger: 'circle-xmark',
      warning: 'triangle-exclamation',
      info: 'circle-info'
    }[type] || 'circle-info'; // fallback

    message = `<i class="fa-light fa-${icon_class} fs-5 pe-2"></i>` + message;
  }

  if (dismiss) {
    message += `<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>`;
  }

  const alert = container.create('div', {
    class: `alert alert-${type} ${_class ? _class : ''} ${icon ? 'd-flex align-items-center' : ''} ${dismiss ? 'alert-dismissible fade show' : ''}`,

    attr: 'role=alert',
    html: message
  });

  if (auto_close) setTimeout(() =&gt; alert.remove(), timer);

  return alert;
}
